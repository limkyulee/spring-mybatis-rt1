<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kyuleelim.admincore.member.mapper.MemberMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="MemberSaveReqDto">
        -- MemberMapper.save
        INSERT INTO member (
             username,
             password,
             email,
             role
        )
       VALUES (
            #{username},
            #{password},
            #{email},
            #{role}
        )
    </insert>

    <select id="findByEmail" resultType="MemberLoginReqDto">
        -- MemberMapper.findByEmail
        SELECT id, username, email, role, password
        FROM member
        WHERE email = #{email}
    </select>

    <select id="findAll" resultType="Member">
        -- MemberMapper.findAll
        SELECT * FROM member
    </select>
</mapper>